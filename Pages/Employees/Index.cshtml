            </td>
            <th>
                @Html.DisplayFor(modelitem => item.EmpTeamDate)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalityType)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        -->
                <div class="col">
                    <div class="headblock border padTwo lightBG">
                        <div class="headBlock">
                            <h3 class="padOne"><b>@Html.DisplayFor(modelItem => item.FirstMidName) @Html.DisplayFor(modelItem => item.LastName)</b></h3>
                            <a class="padOne">@Html.DisplayFor(modelItem => item.JobTitle)</a><br><br>

                            <button type="button" class="btn btn-success margOne">
                                <a asp-page="./Edit" asp-route-id="@item.ID" style="color:white;">Manage</a>
                            </button>
                            <button type="button" class="btn btn-success">
                                <a asp-page="./Details" asp-route-id="@item.ID" style="color:white;">Details</a>
                            </button>
                        </div>
                    </div>
                </div>
            }

        </div>
        <br>

    </div>
    <div class="row">
        <div class="col" align="center">
            <br>
            <button type="button" class="btn btn-success">
                Show all
            </button>
        </div>
    </div>
    <br><br>
    </div>
